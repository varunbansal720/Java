package javaapplication1;

import java.util.Scanner;

/**
 *
 * @author anshb
 */
public class SwitchUse {

    public static void main(String[] args){
        
    
    int a;
    System.out.println("Enter number between 1 and 3");
    Scanner s = new Scanner(System.in);
    a= s.nextInt();
    switch(a)
    {
        case 1: System.out.println("YOU CHOOOSE 1");
        break;
        case 2: System.out.println("YOU CHOOOSE 2");
        break;
        case 3: System.out.println("YOU CHOOOSE 3");
        break;
        default:  System.out.println("Choose Between 1 and 3");
    }
    
    
}
}
